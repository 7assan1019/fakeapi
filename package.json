{
  "name": "curdor-mock-api",
  "version": "1.0.0",
  "description": "Professional mock REST API service with rich, realistic data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "serve": "json-server --watch db.json --port 3000 --host 0.0.0.0",
    "serve:dev": "json-server --watch db.json --port 3000 --host 0.0.0.0 --delay 1000",
    "serve:secure": "json-server --watch db.json --port 3000 --host 0.0.0.0 --middlewares ./middleware/auth.js"
  },
  "keywords": [
    "mock-api",
    "rest-api",
    "json-server",
    "development",
    "testing"
  ],
  "author": "Curdor Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "json-server": "^0.17.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
